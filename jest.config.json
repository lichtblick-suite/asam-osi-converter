{
  "testEnvironment": "jsdom",
  "testRunner": "jest-circus/runner",
  "testMatch": ["<rootDir>/tests/**/*.spec.ts"],
  "transform": {
    "^.+\\.ts$": [
      "esbuild-jest", {
        "sourcemap": true
      }
    ]
  },
  "moduleNameMapper": {
    "^@utils/(.*)$": "<rootDir>/src/utils/$1",
    "^@assets/(.*)$": "<rootDir>/assets/$1",
    "^@converters/(.*)$": "<rootDir>/src/converters/$1",
    "^@features/(.*)$": "<rootDir>/src/features/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
